<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="nord1" _name="nord1" version="1.0">

  <author>kjj</author>
  <_description>Dark color scheme using nord color palette.</_description>

  <!-- Color Palette -->
  <color name="nordx"                     value="#20242C"/>
  <color name="nord0"                     value="#2E3440"/>
  <color name="nord1"                     value="#3B4252"/>
  <color name="nord2"                     value="#434C5E"/>
  <color name="nord3"                     value="#4C566A"/>
  <color name="nord4"                     value="#D8DEE9"/>
  <color name="nord5"                     value="#E5E9F0"/>
  <color name="nord6"                     value="#ECEFF4"/>
  <color name="nord7"                     value="#8FBCBB"/>
  <color name="nord8"                     value="#88C0D0"/>
  <color name="nord9"                     value="#81A1C1"/>
  <color name="nord10"                    value="#5E81AC"/>
  <color name="nord11"                    value="#BF616A"/>
  <color name="nord12"                    value="#D08770"/>
  <color name="nord13"                    value="#EBCB8B"/>
  <color name="nord14"                    value="#A3BE8C"/>
  <color name="nord15"                    value="#B48EAD"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="nord4" background="nordx"/>
  <style name="selection"                   foreground="nord4" background="nord0"/>
  <style name="cursor"                      foreground="nord4"/>
  <style name="secondary-cursor"            foreground="nord4"/>
  <style name="current-line"                background="nord1"/>
  <style name="line-numbers"                foreground="nord4" background="nordx"/>
  <style name="draw-spaces"                 foreground="nord2"/>
  <style name="background-pattern"          background="nord3"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="nord7"/>
  <style name="bracket-mismatch"            foreground="nord13" background="nordx"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="nord4" background="nord0"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="nord4" background="nord2"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="nord3"/>
  <style name="def:shebang"                 foreground="nord4" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="nord7"/>
  <style name="def:string"                  foreground="nord8"/>
  <style name="def:special-char"            foreground="nord9"/>
  <style name="def:special-constant"        foreground="nord10"/>
  <style name="def:floating-point"          foreground="nord15"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="nord8"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="nord9" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="nord10" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="nord7"/>
  <style name="def:error"                   foreground="nord11" background="nordx" bold="true"/>
  <style name="def:warning"                 foreground="nord12" background="nordx"/>
  <style name="def:note"                    background="nord13" foreground="nordx" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Language specific -->
  <style name="diff:added-line"             foreground="nord14"/>
  <style name="diff:removed-line"           foreground="nord12"/>
  <style name="diff:changed-line"           foreground="nord13"/>
  <style name="diff:diff-file"              foreground="nord15" bold="true"/>
  <style name="diff:location"               foreground="nord15"/>
  <style name="diff:special-case"           foreground="nord5" bold="true"/>

  <style name="latex:command"               foreground="nord5" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
